{
  "compilerOptions": {
    "strictPropertyInitialization": false,
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "../",
    "baseUrl": "../",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "shared/*": ["shared/*"]
    }
  },
  "include": ["src", "../shared"],
  "exclude": ["node_modules"]
}
